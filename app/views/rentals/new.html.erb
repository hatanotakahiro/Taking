<div class="items-sell-contents">
  <header class="items-sell-header">
    <%= link_to image_tag('Lending.png' , size: '200x70'), "/" %>

  </header>
  <div class="items-sell-main">
    <h2 class="items-sell-title">貸出機器の情報を入力</h2>
    <%= form_with model: @rental, local: true do |f| %>

    <%= render 'shared/error_messages', model: f.object %>

    <%# 作品名と作品詳細 %>
      <div class="rental-form">
        <div class="weight-bold-text">
            機器の種類
  <!--         <span class="indispensable">必須</span> -->
          <%= f.collection_select(:equipment, Category.all, :id, :name, {}, {class:"rental-form", id:"equipment-category"}) %>
        </div>
      </div>
      <div class="rental-form">
        <div class="weight-bold-text">
          貸出理由
<!--           <span class="indispensable">必須</span> -->
        </div>
        <%= f.text_area :reason, class:"rentals-text", id:"rental-text", placeholder:"理由（簡潔に）", rows:"7" ,maxlength:"500" %>
      </div>
      <div class="rental-form">
        <div class="weight-bold-text">
          コード
<!--           <span class="indispensable">必須</span> -->
        </div>
        <%= f.text_field :code, class:"rentals-text", id:"rental-text", placeholder:"コード入力", rows:"7" ,maxlength:"50" %>
      </div>
      <div class="rental-form">
        <div class="weight-bold-text">
          貸出日（予定）
<!--           <span class="indispensable">必須</span> -->
        </div>
        <div class='input-release-wrap'>
          <%= raw sprintf(
                      f.date_select(
                        :release_date,
                        class:'select-release',
                        id:"release-date",
                        use_month_numbers: true,
                        prompt:'--',
                        start_year: 2021,
                        end_year: (Time.now.year + 3),
                        date_separator: '%s'),
                      "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
        </div>
      </div>
      <div class="rental-form">
        <div class="weight-bold-text">
          返却日（予定）
<!--           <span class="indispensable">必須</span> -->
        </div>
        <div class='input-release-wrap'>
          <%= raw sprintf(
                      f.date_select(
                        :release_date,
                        class:'select-release',
                        id:"release-date",
                        use_month_numbers: true,
                        prompt:'--',
                        start_year: 2021,
                        end_year: (Time.now.year + 3),
                        date_separator: '%s'),
                      "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
        </div>
      </div>
    <%# /作品名と作品詳細 %>
    <%# 下部ボタン %>
    <div class="sell-btn-contents">
      <%= f.submit "貸出を申請する" ,class:"sell-btn btn btn-primary" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
    <%# /下部ボタン %>
  </div>
  <% end %>
</div>
<%= render "shared/footer" %>