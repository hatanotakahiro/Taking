<%= render "shared/second-header"%>

<div class='sing-up container-fluid'>
  <%= form_with model: @user, url: user_registration_path, class: 'registration-main row', local: true do |f| %>
  <div class='form-wrap row'>
    <div class="col-2"></div>
    <div class="col">
      <div class='form-header, row align-items-start justify-content-start'>
        <h1 class='form-header-text'>
          会員情報入力
        </h1>
      </div>
      <%= render 'shared/error_messages', model: f.object %>
      <div class="form-group, row align-items-start">
        <div class='form-text-wrap'>
          <label class="form-text">名前</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :name, class:"input-default", id:"name", placeholder:"例) 山田太郎", maxlength:"40" %>
      </div>
      <div class="form-group, row align-items-start">
        <div class='form-text-wrap'>
          <label class="form-text">パスワード</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
        <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
      </div>
      <div class="form-group, row align-items-start">
        <div class='form-text-wrap'>
          <label class="form-text">パスワード(確認)</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
      </div>
      <div class='register-btn, row align-items-start'>
        <%= f.submit "会員登録" ,class:"register-red-btn" %>
      </div>
    </div>
    <div class="col-2"></div>
  </div>
  <% end %>
</div>
<%= render "shared/footer" %>